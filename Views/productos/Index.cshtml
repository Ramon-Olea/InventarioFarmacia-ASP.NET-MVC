@{
ViewData["Title"]="Listado";
}
@section Estilos{
    <link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />
}
<a asp-action="Crear" asp-controller="Productos" class="btn btn-outline-primary">Crear Productos</a>
<br />
<br />
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
        <table class="table display " id="example" style="width:100%">
            <thead>
                <tr>
                    <th>
                    Codigo
                    </th>
                    <th>
                    Nombre
                </th>
                    <th>
                    Marca
                </th>
                    <th>
                    Stock
                </th>
                    <th>
                    Precio
                </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in ViewBag.listado)
            {
                    <tr>
                        <td>
                            @item.codigo
                        </td>
                        <td>
                        @item.nombre
                        </td>
                        <td>
                        @item.marca
                        </td>
                        <td>
                        @item.stock
                        </td>
                        <td>
                        @item.precio
                        </td>
                        <td>
                        <a asp-action="Editar" asp-route-id="@item.Id"  class="btn btn-primary">Editar</a> |
                        <a asp-action="Eliminar" asp-route-id="@item.Id"  class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" />
    <script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });

    </script>

}