@{
ViewData["Title"]="Listado";
}


@section Estilos{
    <link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">


                <a asp-action="Crear" asp-controller="Es" class="btn btn-outline-primary">Entrada de stock</a>
                <a asp-action="Salida" asp-controller="Es" class="btn btn-outline-danger">Salida de stock</a>

        <table class="table display " id="example" style="width:100%">
            <thead>
                <tr>
                    <th>
                    Idproducto
                    </th>
                    <th>
                    Cantidad
                </th>
                    <th>
                    Tipo
                </th>
                            <th>
                                Fecha
                            </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in ViewBag.listado)
            {
                    <tr>
                        <td>
                        @item.IdProductos
                        </td>

                        <td>
                        @item.Cantidad
                        </td>
                        <td>
                        @item.Descripcion
                        </td>
                        <td>
                        @item.Fecha
                        </td>
                      
                    </tr>
                }
            </tbody>
        </table>


    <div class="clearfix"></div>
</div>
        </div>
    </div>
</div>


@section Scripts{

        <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" />
        <script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function () {
            $('#example').DataTable({
                order: [[3, 'desc']],
            });
    });

        </script>

}